.taps {
  display: flex;
  padding: 0 120rpx;
  line-height: 88rpx;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
}

.tap {
  position: relative;
  flex: 1;
  line-height: 72rpx;
  text-align: center;
  font-size: 36rpx;
  color: #71777d;
}

.active {
  color: #2b333b;
}

.active-bar {
  position: absolute;
  top: 60rpx;
  left: 110rpx;
  width: 36rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background: #f01414;
}

.time {
  display: flex;
  width: 240rpx;
  height: 64rpx;
  margin: 40rpx auto;
  border: 1px solid #71777d;
  border-radius: 4px;
  font-size: 28rpx;
  color: #71777d;
}

.period {
  flex: 1;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 6rpx;
  margin: 6rpx;
}

.period-active {
  background: #71777d;
  color: #fff;
}

.list {
  margin-top: 24rpx;
}

.item {
  margin: 0 48rpx 40rpx 48rpx;
  /* 将容器变为弹性伸缩盒子，自己撑开 */
  display: flex;
}

.item-image {
  width: 180rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.item-title {
  flex: 1;
  display: table;
  height: 120rpx;
  margin-left: 24rpx;
  margin-right: 48rpx;
}

.item-title-inner {
  display: table-cell;
  font-size: 28rpx;
  color: #2b333b;
  line-height: 40rpx;
  /* 文字垂直居中 */
  vertical-align: middle;
  /* 可以将字打的更散一点，或者说在恰当的断字点进行换行： */
  word-break: break-all;
}
.item-number-img {
  width: 60rpx;
  height: 52rpx;
  margin-right: 48rpx;
  margin-top: 30rpx;
}
.item-number-common {
  font-size: 36rpx;
  color: #71777d;
  line-height: 40rpx;
  margin-right: 65rpx;
  margin-top: 30rpx;
  text-align: right;
}